{
  "name": "simplecov-resultset-diff-action",
  "version": "0.0.1",
  "private": true,
  "description": "SimpleCov resultset diff action",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "bundle": "pnpm run format:write && pnpm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "pnpm run package -- --watch",
    "test": "npx jest",
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run coverage && pnpm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kzkn/simplecov-resultset-diff-action.git"
  },
  "keywords": [
    "actions",
    "ruby",
    "simplecov"
  ],
  "author": "Kazuki Nishikawa",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "markdown-table-ts": "^1.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.10",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.57.1",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.2.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
